<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/login_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:background="@drawable/wanyiyun" />

        <EditText
            android:id="@+id/login_account_et"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:layout_below="@id/login_iv"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="67dp"
            android:background="@drawable/write"
            android:hint="账号"
            android:textColor="#ff000000"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:layout_below="@id/login_account_et"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/write"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColor="#ff000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/login_tx"
            android:layout_width="155dp"
            android:layout_height="14dp"
            android:layout_below="@id/login_password_et"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="18dp"
            android:text="Forgot your password?"
            android:textColor="#758692"
            android:layout_marginRight="110dp"
            android:layout_gravity="center"
            android:textSize="12sp" />

        <Button
            android:id="@+id/login_bt"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_below="@id/login_tx"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="23dp"
            android:layout_marginRight="98dp"
            android:background="@drawable/red"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/login_tx1"
            android:layout_width="176dp"
            android:layout_height="14dp"
            android:layout_below="@id/login_tx"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="61dp"
            android:text="Sign with a social account"
            android:textColor="#758692"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/register_f_bt"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:background="@drawable/bule"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="Login with Facebook"/>

        <Button
            android:id="@+id/register_t_bt"
            android:layout_width="260dp"
            android:layout_height="44dp"
            android:background="@drawable/shape"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="58dp"
            android:layout_marginRight="58dp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="Login with Twitter"/>

    </LinearLayout>

</LinearLayout>
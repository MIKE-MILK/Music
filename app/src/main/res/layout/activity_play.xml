<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/play_toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/play_back"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/arrow" />

        <TextView
            android:layout_width="57dp"
            android:layout_height="23dp"
            android:text="nothing"
            android:textColor="#1c252a"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginLeft="165dp"
            />

        <ImageView
            android:id="@+id/play_dots"
            android:layout_width="23dp"
            android:layout_height="10dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/dots" />
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="328dp"
        android:layout_height="324dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:src="@drawable/write"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_below="@id/play_iv"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_shaffle"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:src="@mipmap/shaffle"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/play_next"
            android:layout_width="19dp"
            android:layout_height="11dp"
            android:src="@mipmap/backfast"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/play"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/play" />

        <ImageView
            android:id="@+id/play_go"
            android:layout_width="19dp"
            android:layout_height="11dp"
            android:src="@mipmap/gofast"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"/>
        <ImageView
            android:id="@+id/play_repeat"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:src="@mipmap/repeat"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/music_name"
        android:layout_width="123dp"
        android:layout_height="27dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="nothing"
        android:textColor="#1c252a"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/creator_name"
        android:layout_width="77dp"
        android:layout_height="17dp"
        android:text="lyric next"
        android:textColor="#758692"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="150dp"
        />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/play_time1"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:text="0:00"/>
        <SeekBar
            android:id="@+id/playSeekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/play_time2"
            android:layout_width="30dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="0:00"/>
    </LinearLayout>
    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/play_bottom"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

</LinearLayout>